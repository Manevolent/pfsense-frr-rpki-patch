	<adddeleteeditpagefields>
		<columnitem>
			<fielddescr>Name</fielddescr>
			<fieldname>name</fieldname>
		</columnitem>
		<columnitem>
			<fielddescr>Host</fielddescr>
			<fieldname>host</fieldname>
		</columnitem>
		<columnitem>
			<fielddescr>Description</fielddescr>
			<fieldname>descr</fieldname>
		</columnitem>
	</adddeleteeditpagefields>
	<fields>
		<field>
			<fielddescr>Name</fielddescr>
			<fieldname>name</fieldname>
			<description>
				<![CDATA[
				The name of this RPKI cache server.
				]]>
			</description>
			<type>input</type>
			<size>20</size>
			<required/>
		</field>
		<field>
			<fielddescr>Description</fielddescr>
			<fieldname>descr</fieldname>
			<size>50</size>
			<type>input</type>
		</field>
		<field>
			<fielddescr>Host</fielddescr>
			<fieldname>host</fieldname>
			<description>
				<![CDATA[
				The host or IP address for this cache server.
				]]>
			</description>
			<size>50</size>
			<type>input</type>
			<combinefields>begin</combinefields>
		</field>
		<field>
			<fielddescr>Port</fielddescr>
			<fieldname>port</fieldname>
			<description>
				<![CDATA[
				The port for this cache server.
				]]>
			</description>
			<size>6</size>
			<type>input</type>
			<combinefields>end</combinefields>
		</field>
		<field>
			<fielddescr>Preference</fielddescr>
			<fieldname>preference</fieldname>
			<description>
				<![CDATA[
				The internal preference for this cache server. Lower preference cache servers are queried first.
				]]>
			</description>
			<size>6</size>
			<type>input</type>
		</field>
		<field>
			<name>SSH</name>
			<type>listtopic</type>
		</field>
		<field>
			<fielddescr>Enable</fielddescr>
			<fieldname>sshenable</fieldname>
			<description>Connect as SSH client</description>
			<type>checkbox</type>
		</field>
		<field>
			<fielddescr>Username</fielddescr>
			<fieldname>sshusername</fieldname>
			<description>
				<![CDATA[
				The username to use when authenticating via SSH.
				]]>
			</description>
			<size>100</size>
			<type>input</type>
		</field>
		<field>
			<fielddescr>Public Key File</fielddescr>
			<fieldname>sshpublickey</fieldname>
			<description>
				<![CDATA[
				The public key path for the SSH channel (e.g. id_rsa.pub).
				]]>
			</description>
			<size>100</size>
			<type>input</type>
		</field>
		<field>
			<fielddescr>Private Key File</fielddescr>
			<fieldname>sshprivatekey</fieldname>
			<description>
				<![CDATA[
				The private key path for the SSH channel (e.g. id_rsa).
				]]>
			</description>
			<size>100</size>
			<type>input</type>
		</field>
	</fields>
	<custom_php_resync_config_command>
		frr_generate_config();
	</custom_php_resync_config_command>
